<phpunit bootstrap="vendor/autoload.php"
         backupStaticAttributes="false"
         cacheTokens="false"
         colors="true"
         processIsolation="false"
         stopOnError="false"
         stopOnFailure="false"
         stopOnIncomplete="false"
         stopOnSkipped="false"
         verbose="true"
         forceCoversAnnotation="false"
>
    <testsuites>
        <testsuite name="unit">
            <directory suffix="Test.php">tests/unit</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory suffix=".php">src/SbWereWolf</directory>
        </whitelist>
    </filter>
</phpunit>
